
@{
    ViewBag.Title = "Index";
  // int sn = 0;
}

<h2>Index</h2>
<table class="table" border="1">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Address</th>
        <th>Age</th>
    </tr>
    @foreach (var data in Model)
    {
    <tr>
        <td>@(data.id)</td>
        <td>@(data.name)</td>
        <td>@(data.address)</td>
        <td>@(data.age)</td>
        <td><a href="@Url.Action("Edit", new {id=data.id})">Edit</a></td>

    </tr>
    }



</table>
<button class="button"><a href="@Url.Action("Arko")">Add Record</a></button>
